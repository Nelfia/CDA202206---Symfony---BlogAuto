<div class="container">
    {{ form_start(form) }}
        <div class="col">{{ form_row(form.title) }}</div>
        <div class="col">{{ form_row(form.marque) }}</div>
        <div class="col">{{ form_row(form.description) }}</div>
        <div class="col">{{ form_row(form.model) }}</div>
        <div class="col">{{ form_row(form.price) }}</div>
        <div class="col">{{ form_row(form.year) }}</div>
        <div class="col">{{ form_row(form.km) }}</div>
        <div class="col">{{ form_row(form.fuel) }}</div>
        <div class="col">{{ form_row(form.license) }}</div>
        <div class="col">{{ form_row(form.imgfile) }}</div>

        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
